.carlistbox{
    border-top:4px solid red; 
    height: 500px;
    width: 100%;
    margin-top: 20px;
}
.iteminfo{
    height: 40px;
    background-color: rgb(211, 211, 211);
    margin-top: 80px;
}
.iteminfo li{
    float: left;
    line-height: 40px;
}
#check{
    width: 40px;
    text-align: center;
}
#item-name{
    width: 760px;
}
#item-price{
    width: 140px;
}
#item-count{
    width: 100px;
}
#item-total{
    width: 100px;
}
#item-action{
    width: 60px;
}
.item li{
    padding: 15px;
    height: 100px;
    position: relative;
    input{
        position: absolute;
        top: 20px;
    }
    img{
        position: absolute;
        top: 20px;
        left: 40px;
    }
    p{
        position: absolute;
        top: 20px;
        left: 130px;
        color: #999;
    }
    .price{
        position: absolute;
        top: 30px;
        left: 780px;
    }
}